
<div class="card">
    <div class="card-body">
        <h3 class="card-header">Sign Up</h3>
        <form id="signup-form">
            <div class="form-group">
                <label for="username-signup">Username</label>
                <input type="text" class="form-control" id="username-signup" autofocus="true" class
                    aria-describedby="username">
            </div>
            <div class="form-group">
                <label for="password-signup">Password</label>
                <input type="password" class="form-control" autofocus="true" id="password-signup">
            </div>
            <button type="submit" class="btn btn-primary btn-lg">Signup!</button>
        </form>

    </div>
</div>


<script src="/js/signup.js"></script>